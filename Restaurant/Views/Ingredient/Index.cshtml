@model IEnumerable<Ingredient>

    @{
        ViewBag.Title = "List of Restaurant Ingredients";
    }

<h1>Lista Składników</h1>
<br/>
<a asp-action="Create" class="btn btn-primary fs-4">Stwórz nowy składnik</a>

<table class="table">
    <thead>
        <tr>
            <th class="fs-5" >
               Nazwa
            </thclass>
            <th></th>
        </tr>
    </thead>
    <tbody class="fs-5">
        @foreach(Ingredient i in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => i.Name)
                </td>
                <td>
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@i.IngredientId">Szczegóły</a>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@i.IngredientId">Edytuj</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@i.IngredientId">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>