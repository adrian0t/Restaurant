@model Ingredient
@{
    ViewBag.Title = "Create Ingredient";
}
<div class="row">
    <div class="col-md-4">
    <form asp-action="Create" method="post">
        <div class="form-group fs-4">
            <label asp-for="Name">Nazwa Składnika</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary fs-4">Stwórz</button>
        <a asp-action="Index" class="btn btn-secondary fs-4">Powrót</a>
    </form>
    </div>
</div>
